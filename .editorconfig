; top-most EditorConfig file
root = true

; Unix-style newlines
[*]
charset = utf-8
end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true

[*.{php,html,twig,sh,json,js,css,yml,yaml,xml}]
indent_style = space
indent_size = 4

[{.travis.yml,appveyor.yml}]
indent_style = space
indent_size = 2

[phpunit.xml{,.dist}]
indent_style = space
indent_size = 4

[.scrutinizer.yml,.htaccess]
indent_style = space
indent_size = 4

[COMMIT_EDITMSG]
max_line_length = 0
